<header class="masthead text-center text-white">
    <div class="masthead-content">
        <div class="container">
            <h1 class="masthead-heading mb-0">¡Contáctanos!</h1>
            <h2 class="masthead-subheading mb-0">Dudas o comentarios</h2>
        </div>
    </div>
</header>
<div class="contact-clean">
    <form id="/contact" method="POST">
        <h2 class="text-center">Regístrate Aquí</h2>
        <div class="form-group"><input class="form-control" id="name" type="text" name="name" placeholder="Nombre" required=""></div>
        <div class="form-group"><input class="form-control" id="mail" type="email" name="email" placeholder="Correo Electrónico" required=""></div>
        <div class="form-group"><textarea class="form-control" id="message" name="message" placeholder="Mensaje"
                rows="14" required=""></textarea></div>
        <div class="form-group">
            <button class="btn btn-primary text-left text-warning" type="submit" value="submit">Enviar</button>
        </div>
    </form>
</div>